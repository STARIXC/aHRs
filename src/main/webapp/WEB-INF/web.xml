<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>aHRIM</display-name>
    <servlet>
        <servlet-name>ProcessEmployee</servlet-name>
        <servlet-class>controllers.ProcessEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Dashboard</servlet-name>
        <servlet-class>controllers.Dashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeaveApplication</servlet-name>
        <servlet-class>controllers.LeaveApplication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadYear</servlet-name>
        <servlet-class>controllers.loadYear</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadMonth</servlet-name>
        <servlet-class>controllers.loadMonth</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLeave</servlet-name>
        <servlet-class>controllers.ProcessLeave</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepartmentController</servlet-name>
        <servlet-class>controllers.DepartmentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MonthlyTimesheet</servlet-name>
        <servlet-class>controllers.MonthlyTimesheet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Terminations</servlet-name>
        <servlet-class>controllers.Terminations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarderTypeUpdates</servlet-name>
        <servlet-class>controllers.CarderTypeUpdates</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarderCat</servlet-name>
        <servlet-class>controllers.CarderCat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarderCatUpdate</servlet-name>
        <servlet-class>controllers.CarderCatUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarderType</servlet-name>
        <servlet-class>controllers.CarderType</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLeaves</servlet-name>
        <servlet-class>controllers.ProcessLeaves</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessEmployee</servlet-name>
        <url-pattern>/Employee/create_employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dashboard</servlet-name>
        <url-pattern>/Dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadYear</servlet-name>
        <url-pattern>/loadYear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadMonth</servlet-name>
        <url-pattern>/loadMonth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepartmentController</servlet-name>
        <url-pattern>/department</url-pattern>
        <!--        <url-pattern>/department/create</url-pattern>
        <url-pattern>/department/update</url-pattern>
        <url-pattern>/department/edit</url-pattern>-->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeaveApplication</servlet-name>
        <url-pattern>/LeaveApplication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessLeave</servlet-name>
        <url-pattern>/ProcessLeave</url-pattern>
        <url-pattern>/approve_application_form</url-pattern>
        <url-pattern>/reject_application_form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MonthlyTimesheet</servlet-name>
        <url-pattern>/MonthlyTimesheet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Terminations</servlet-name>
        <url-pattern>/Terminations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarderTypeUpdates</servlet-name>
        <url-pattern>/CarderTypeUpdates</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarderCat</servlet-name>
        <url-pattern>/CarderCat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarderCatUpdate</servlet-name>
        <url-pattern>/CarderCatUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarderType</servlet-name>
        <url-pattern>/CarderType</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessLeaves</servlet-name>
        <url-pattern>/ProcessLeaves</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>
            java.lang.Exception
        </exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>
