        package controllers;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.SQLException;
import java.util.logging.Level;
import java.util.logging.Logger;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.hris.db.DatabaseConnection;
import com.google.gson.*;
/**
 * Servlet implementation class AllStaffServlet
 */
@WebServlet("/AllStaffServlet")
public class AllStaffServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public AllStaffServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		try {
			response.setContentType("application/json;charset=UTF-8");
			Gson gson = new Gson();
			PrintWriter out = response.getWriter();
			String sql = "select "
					+ "b.id,  b.emp_no,  b.first_name as firstname,"
					+ "  b.surname as surname,  b.other_name,  b.phone, b.email,"
					+ "  b.nationality,h.active as status,c.position_title as position "
					+ "from emp_bio b join employee_hist h on h.emp_no =b.emp_no "
					+ "join cadre_positions c on h.position=c.id ";
			DatabaseConnection conn = new DatabaseConnection();
			conn.rs = conn.st.executeQuery(sql);
			String data = "";
			
			int a=1;
			while (conn.rs.next()) {
				data +="<tr>"
						+ "<td>"+ a++ +"</td>"
						+ "<td>"+ conn.rs.getString("firstname") +"</td>"
						+ "<td>"+ conn.rs.getString("surname") +"</td>"
						+ "<td>"+ conn.rs.getString("emp_no") +"</td>"
						+ "<td>"+ conn.rs.getString("phone") +"</td>"
						+ "<td>"+ conn.rs.getString("email") +"</td>"
						+ "<td>"+ conn.rs.getString("nationality") +"</td>"
						+ "<td>No</td>"
						+ "<td>"+conn.rs.getString("status")+"</td>"
						+ "	<td class='d-flex'>"
						+"<a href='/update_employee_form/'"+conn.rs.getInt("id")+"' class='btn btn-xs btn-success'><i class='fa fa-pencil'></i></a>"
						+ "	<a  class='btn btn-xs btn-danger'><i class='fa fa-trash'></i></a>"
						+ "<a href='Employees/cv/'"+conn.rs.getInt("id")+"' class='btn btn-default btn-xs'><i class='fa fa-user'></i></a>"
						+ "</td>"
						+ "</tr>";

			}
		
			
			out.println(data);
			out.close();

		} catch (SQLException ex) {
            Logger.getLogger(AllStaffServlet.class.getName()).log(Level.SEVERE, null, ex);
        }
//		response.getWriter().append("Served at: ").append(request.getContextPath());
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		doGet(request, response);
	}

}
        