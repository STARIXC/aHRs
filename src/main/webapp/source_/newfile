            int county_id;
            county_id = Integer.parseInt(request.getParameter("county"));
            //query
            String sql = "SELECT DistrictID,DistrictNom FROM district WHERE CountyID='" + county_id + "'";
            conn = (Connection) DB.getConnection();
            rs = st.executeQuery(sql);
